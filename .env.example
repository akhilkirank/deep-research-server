# Server configuration
PORT=3000
NODE_ENV=development

# API Keys
GOOGLE_GENERATIVE_AI_API_KEY=your_google_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Optional: API Base URLs (only change if you're using a proxy or custom endpoint)
GOOGLE_GENERATIVE_AI_API_BASE_URL=https://generativelanguage.googleapis.com
TAVILY_API_BASE_URL=https://api.tavily.com
OPENROUTER_API_BASE_URL=https://openrouter.ai/api

# Logging Configuration
# Available levels: debug, info, warn, error, critical, none
LOG_LEVEL=info
# Available formats: pretty, json
LOG_FORMAT=pretty

# Default Providers
DEFAULT_LLM_PROVIDER=google
DEFAULT_SEARCH_PROVIDER=tavily

# Mock Mode (set to 'true' to enable mock mode for testing without API tokens)
USE_MOCK_MODE=false

# Default Models
DEFAULT_THINKING_MODEL=gemini-2.0-flash-thinking-exp-01-21
DEFAULT_NETWORKING_MODEL=gemini-2.0-flash-001
DEFAULT_OPENROUTER_MODEL=google/gemini-2.5-pro-exp-03-25:free
